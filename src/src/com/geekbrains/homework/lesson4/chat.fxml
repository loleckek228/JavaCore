<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.homework.lesson4.ChatController">
    <HBox maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS">
        <TextArea fx:id="usersNameArea" editable="false" maxWidth="Infinity" prefHeight="217.0" prefWidth="106.0" HBox.hgrow="ALWAYS">
            <font>
                <Font name="AdobeKaitiStd-Regular" size="16.0" />
            </font>
        </TextArea>
        <TextArea fx:id="mainArea" editable="false" maxWidth="Infinity" prefHeight="217.0" prefWidth="455.0" HBox.hgrow="ALWAYS">
            <font>
                <Font name="AdobeKaitiStd-Regular" size="14.0" />
            </font>
        </TextArea>
        <TextArea fx:id="timeArea" editable="false" maxWidth="Infinity" prefHeight="362.0" prefWidth="84.0" HBox.hgrow="ALWAYS">
            <font>
                <Font name="AdobeKaitiStd-Regular" size="14.0" />
            </font>
        </TextArea>
    </HBox>
    <Separator prefHeight="10.0" />
    <HBox>
        <TextField fx:id="userName" maxWidth="Infinity" onAction="#sendMessage" prefHeight="27.0" prefWidth="0.0" promptText="Введите имя..." HBox.hgrow="ALWAYS">
            <font>
                <Font name="AdobeKaitiStd-Regular" size="14.0" />
            </font>
        </TextField>
        <TextField fx:id="messageText" maxWidth="Infinity" onAction="#sendMessage" prefHeight="28.0" prefWidth="372.0" promptText="Введите сообщение..." HBox.hgrow="ALWAYS">
            <font>
                <Font name="AdobeKaitiStd-Regular" size="14.0" />
            </font>
        </TextField>
        <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#sendMessage" text="Отправить" />
    </HBox>
</VBox>